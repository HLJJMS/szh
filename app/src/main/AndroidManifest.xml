<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diwaves.news">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.jess.arms.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/QMUI.NoActionBar">
        <activity android:name="com.diwaves.news.mvp.ui.activity.TypeListActivityActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.MyYuCeActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.MyArticleActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.MyFansAndLookActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.MyCommentActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.MyCollectActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.MyLookActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.RmbMaketMainActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.SearchActivityActivity" />
        <activity
            android:name="com.diwaves.news.mvp.ui.activity.ArticleDetailActivity"
            android:configChanges="keyboardHidden"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.WalletRecordActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.AddRmbActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.ReleaseActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.PushTieActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.ReportActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.FriendDetailActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.AddFriendActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.MyFriendActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.EditPhoneActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.EditMyInformationActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.SettingActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.ResetPassWordActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.RegisterActivity" />
        <activity android:name="com.diwaves.news.mvp.ui.activity.LoginActivity" />
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name="com.diwaves.news.mvp.ui.activity.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="true"
            android:taskAffinity="com.diwaves.news"
            android:launchMode="singleTask">
        </activity>
        <meta-data
            android:name="com.diwaves.news.network.GlobalConfiguration"
            android:value="ConfigModule" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.diwaves.news.photo"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/photo_path" />
        </provider>
    </application>

</manifest>