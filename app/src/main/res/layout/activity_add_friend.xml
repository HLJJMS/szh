<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <com.diwaves.news.tools.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_txt="添加朋友" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="添加手机联系人"
        android:textColor="#ff292929"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/titleBar" />

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/ic_phone_yellow"
        app:layout_constraintBottom_toBottomOf="@id/tv_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_phone" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="17dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_go"
        app:layout_constraintBottom_toBottomOf="@id/tv_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_phone" />

    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="扫一扫添加"
        android:textColor="#ff292929"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_phone" />

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/ic_scaning"
        app:layout_constraintBottom_toBottomOf="@id/tv_scan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_scan" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="17dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_go"
        app:layout_constraintBottom_toBottomOf="@id/tv_scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_scan" />


    <TextView
        android:id="@+id/tv_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="微信"
        android:textColor="#ff292929"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_scan" />

    <ImageView
        android:id="@+id/iv_wx"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/ic_weixin_logo"
        app:layout_constraintBottom_toBottomOf="@id/tv_wx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_wx" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="17dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_go"
        app:layout_constraintBottom_toBottomOf="@id/tv_wx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_wx" />
</androidx.constraintlayout.widget.ConstraintLayout>