<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/cl_pinglun"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.szh.tools.MyTitleBar
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:center_txt=""
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingStart="14dp"
                android:textColor="#ff020202"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@id/titleBar" />

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24.5dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="#ff020202"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_img" />

            <TextView
                android:id="@+id/tv_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingStart="14dp"
                android:text="5阅读"
                android:textColor="#ff989898"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/tv_detail" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="21dp"
                android:layout_height="12dp"
                android:layout_marginEnd="24.5dp"
                android:background="#FFF2F2F2"
                android:paddingStart="7dp"
                android:paddingTop="3dp"
                android:paddingEnd="7dp"
                android:paddingBottom="3dp"
                android:src="@mipmap/ic_close_x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_look" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingStart="35dp"
                android:paddingTop="11dp"
                android:paddingEnd="14dp"
                android:paddingBottom="11dp"
                android:text="喜欢"
                android:textColor="#ff111111"
                android:textSize="11sp"
                app:layout_constraintEnd_toStartOf="@id/tv_off"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_look"
                app:qmui_borderColor="#e9e9e9" />

            <ImageView
                android:layout_width="12dp"

                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_like"
                app:layout_constraintBottom_toBottomOf="@id/tv_like"
                app:layout_constraintStart_toStartOf="@id/tv_like"
                app:layout_constraintTop_toTopOf="@id/tv_like" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/tv_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingStart="35dp"
                android:paddingTop="11dp"
                android:paddingEnd="14dp"
                android:paddingBottom="11dp"
                android:text="取消"
                android:textColor="#ff111111"
                android:textSize="11sp"
                app:layout_constraintEnd_toStartOf="@id/tv_wx"
                app:layout_constraintStart_toEndOf="@id/tv_like"
                app:layout_constraintTop_toBottomOf="@id/tv_look"
                app:qmui_borderColor="#e9e9e9" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_start"
                app:layout_constraintBottom_toBottomOf="@id/tv_off"
                app:layout_constraintStart_toStartOf="@id/tv_off"
                app:layout_constraintTop_toTopOf="@id/tv_off" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/tv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingStart="35dp"
                android:paddingTop="11dp"
                android:paddingEnd="14dp"
                android:paddingBottom="11dp"
                android:text="微信"
                android:textColor="#ff111111"
                android:textSize="11sp"
                app:layout_constraintEnd_toStartOf="@id/tv_pyq"
                app:layout_constraintStart_toEndOf="@id/tv_off"
                app:layout_constraintTop_toBottomOf="@id/tv_look"
                app:qmui_borderColor="#e9e9e9" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_weixin_logo"
                app:layout_constraintBottom_toBottomOf="@id/tv_wx"
                app:layout_constraintStart_toStartOf="@id/tv_wx"
                app:layout_constraintTop_toTopOf="@id/tv_wx" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/tv_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingStart="35dp"
                android:paddingTop="11dp"
                android:paddingEnd="14dp"
                android:paddingBottom="11dp"
                android:text="朋友圈"
                android:textColor="#ff111111"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_wx"
                app:layout_constraintTop_toBottomOf="@id/tv_look"
                app:qmui_borderColor="#e9e9e9" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_weixinpyq"
                app:layout_constraintBottom_toBottomOf="@id/tv_pyq"
                app:layout_constraintStart_toStartOf="@id/tv_pyq"
                app:layout_constraintTop_toTopOf="@id/tv_pyq" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/rb_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp"
                android:text="利好(3)"
                android:textColor="#ff111111"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tv_like"
                app:layout_constraintTop_toBottomOf="@id/tv_like"
                app:qmui_backgroundColor="#FECD33"
                app:qmui_borderWidth="0dp"
                app:qmui_radius="16dp" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/rb_bead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp"
                android:text="利空"
                android:textColor="#111111"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/rb_good"
                app:layout_constraintTop_toTopOf="@id/rb_good"
                app:qmui_backgroundColor="#EEEEEE"
                app:qmui_borderWidth="0dp"
                app:qmui_radius="16dp" />

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:text="最热"
                android:textColor="#ff137ed0"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/tv_1"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rb_good" />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="/"
                android:textColor="#ff111111"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_hot"
                app:layout_constraintEnd_toStartOf="@id/tv_new"
                app:layout_constraintStart_toEndOf="@id/tv_hot"
                app:layout_constraintTop_toTopOf="@id/tv_hot" />

            <TextView
                android:id="@+id/tv_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="33dp"
                android:text="最新"
                android:textColor="@color/color_111111"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/tv_2"
                app:layout_constraintStart_toEndOf="@id/tv_1"
                app:layout_constraintTop_toBottomOf="@id/rb_good" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="/"
                android:textColor="#ff111111"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_hot"
                app:layout_constraintEnd_toStartOf="@id/tv_send"
                app:layout_constraintStart_toEndOf="@id/tv_new"
                app:layout_constraintTop_toTopOf="@id/tv_hot" />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="33dp"
                android:text="推+送"
                android:textColor="@color/color_111111"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_2"
                app:layout_constraintTop_toBottomOf="@id/rb_good" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_hot" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pinglun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:paddingStart="15dp"
        android:paddingTop="7dp"
        android:paddingEnd="28dp"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/ic_send"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_comment"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="25dp"
            android:src="@mipmap/ic_home_talk_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/et_comment"
            app:layout_constraintEnd_toStartOf="@id/iv_send"
             />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:background="@drawable/conner5_solid_gray"
            android:paddingStart="5dp"
            android:paddingTop="11dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:textColor="#FF2F2F2F"
            app:layout_constraintEnd_toStartOf="@id/iv_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_add_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_add_img"
            app:layout_constraintTop_toBottomOf="@id/et_comment" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_check_off"
            app:layout_constraintBottom_toBottomOf="@id/tv_only"
            app:layout_constraintEnd_toStartOf="@id/tv_only"
            app:layout_constraintTop_toTopOf="@id/tv_only" />

        <TextView
            android:id="@+id/tv_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅帖子作者可见"
            android:textColor="#ff5b5b5b"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_add_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_add_photo" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textColor="#ff989898"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/et_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_comment" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/g_comment_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iv_send,iv_message"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="6dp" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/g_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_only,iv_check,iv_add_photo,tv_ok"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="7dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>