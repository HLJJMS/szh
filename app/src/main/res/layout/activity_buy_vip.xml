<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/bg_vip" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="11dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_center_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:text="数字海会员"
        android:textColor="#ff020202"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_vip_logo"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="点亮数字海会员"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:background="@drawable/conner5_solid_yellow_stoken_white"
        android:paddingStart="16dp"
        android:paddingTop="56dp"
        android:paddingEnd="16dp"
        android:paddingBottom="43dp"
        android:text=" 1金币 "
        android:textColor="@color/color_F4AB2B"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/tv_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bg" />

    <TextView
        android:id="@+id/tv_1_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="12金币"
        android:textColor="@color/color_888888"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_1"
        app:layout_constraintEnd_toEndOf="@id/tv_1"
        app:layout_constraintStart_toStartOf="@id/tv_1" />

    <TextView
        android:id="@+id/tv_1_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="1个月"
        android:textColor="@color/color_F4AB2B"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_1"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toTopOf="@id/tv_1" />


    <TextView
        android:id="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"

        android:background="@drawable/bg_conner3_white"
        android:paddingStart="16dp"
        android:paddingTop="56dp"
        android:paddingEnd="16dp"
        android:paddingBottom="43dp"
        android:text=" 5金币 "
        android:textColor="#ff444444"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/tv_12"
        app:layout_constraintTop_toBottomOf="@id/iv_bg" />

    <TextView
        android:id="@+id/tv_6_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="12金币"
        android:textColor="@color/color_888888"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_6"
        app:layout_constraintEnd_toEndOf="@id/tv_6"
        app:layout_constraintStart_toStartOf="@id/tv_6" />

    <TextView
        android:id="@+id/tv_6_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="6个月"
        android:textColor="#444444"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_6"
        app:layout_constraintStart_toStartOf="@id/tv_6"
        app:layout_constraintTop_toTopOf="@id/tv_6" />


    <TextView
        android:id="@+id/tv_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_conner3_white"
        android:paddingStart="16dp"
        android:paddingTop="56dp"
        android:paddingEnd="16dp"
        android:paddingBottom="43dp"
        android:text="10金币"
        android:textColor="#ff444444"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bg" />

    <TextView
        android:id="@+id/tv_12_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="12金币"
        android:textColor="@color/color_888888"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_12"
        app:layout_constraintEnd_toEndOf="@id/tv_12"
        app:layout_constraintStart_toStartOf="@id/tv_12" />

    <TextView
        android:id="@+id/tv_12_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="12个月"
        android:textColor="#444444"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_12"
        app:layout_constraintStart_toStartOf="@id/tv_12"
        app:layout_constraintTop_toTopOf="@id/tv_12" />

    <TextView
        android:id="@+id/tv_au"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="金币余额：50"
        android:textColor="#ff222222"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <TextView
        android:id="@+id/tv_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="金币充值"
        android:textColor="#ff1e9dff"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_au"
        app:layout_constraintTop_toBottomOf="@id/tv_au" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/rb_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="下一步"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintBottom_toTopOf="@id/tv_txt"
        app:qmui_backgroundColor="@color/color_F4AB2B"
        app:qmui_radius="5dp" />

    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingBottom="20dp"
        android:text="成为会员即标识同意数字海会员协议和连续订阅会员服务协议"
        android:textColor="#ff888888"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>