<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    android:orientation="vertical"
    android:paddingStart="14dp"
    android:paddingTop="23dp"
    android:paddingEnd="14dp"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/tv_zixun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="12dp"
        android:text="资讯"
        android:textColor="#ff020202"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@id/tv_caijing"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_caijing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="财经"
        android:textColor="#ff959595"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_zixun" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@id/tv_zixun" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_v"
        app:layout_constraintTop_toBottomOf="@id/recycler_g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>