<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"

        tools:ignore="MissingConstraints">

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/color_2BA4D9" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bg_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="@id/create_level"
            app:layout_constraintTop_toBottomOf="@id/iv_setting"
            app:qmui_backgroundColor="@color/qmui_config_color_white"
            app:qmui_borderWidth="0dp"
            app:qmui_radiusTopLeft="15dp"
            app:qmui_radiusTopRight="15dp" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="68dp"
            android:layout_height="68dp"

            android:layout_marginLeft="24dp"
            android:layout_marginTop="46dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/rb_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="34dp"
            android:paddingTop="8dp"
            android:paddingEnd="34dp"
            android:paddingBottom="8dp"
            android:text="立即登录"
            android:textColor="#ff017bd0"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/iv_head"
            app:layout_constraintTop_toBottomOf="@id/iv_head"
            app:qmui_backgroundColor="@color/qmui_config_color_white"
            app:qmui_borderColor="#ff017bd0"
            app:qmui_radius="5dp" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="21dp"
            android:src="@mipmap/ic_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_head" />

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="11dp"
            android:src="@mipmap/ic_scan"
            app:layout_constraintEnd_toStartOf="@id/iv_setting"
            app:layout_constraintTop_toTopOf="@id/iv_head" />

        <ImageView
            android:id="@+id/iv_erweima"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="11dp"
            android:src="@mipmap/ic_code"
            app:layout_constraintEnd_toStartOf="@id/iv_scan"
            app:layout_constraintTop_toTopOf="@id/iv_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#ff000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_head" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_renzheng"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <ImageView
            android:id="@+id/iv_admin"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_admin"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/iv_vip"
            app:layout_constraintTop_toTopOf="@id/tv_name" />
        <TextView
            android:id="@+id/tv_vip"
            android:text="开通 VIP"
            android:paddingEnd="10dp"
            android:textColor="@color/btn_ghost_blue_text_normal"
            android:textSize="12sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="数字号 : "
            android:textColor="#ff5d5d5d"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="位置 :暂无"
            android:textColor="#ff5d5d5d"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_id" />


        <TextView
            android:id="@+id/tv_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:text="十加好友"
            android:textColor="#ff5d5d5d"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_add_friend"

            app:layout_constraintTop_toTopOf="@id/iv_add_friend" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:text=""
            android:textColor="#ff5d5d5d"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_add_friend"

            app:layout_constraintTop_toBottomOf="@id/tv_add_friend" />

        <ImageView
            android:id="@+id/iv_add_friend"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:src="@mipmap/ic_add_friend"
            app:layout_constraintStart_toStartOf="@id/tv_position"
            app:layout_constraintTop_toBottomOf="@id/tv_position" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bg_one"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            app:qmui_backgroundColor="#83C6FB"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="10dp" />

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:text="今日获阅读"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/bg_one"
            app:layout_constraintTop_toTopOf="@id/bg_one" />

        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="本周获阅读"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/month"
            app:layout_constraintStart_toEndOf="@id/today"
            app:layout_constraintTop_toTopOf="@id/bg_one" />

        <TextView

            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:text="本月获阅读"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/bg_one"
            app:layout_constraintTop_toTopOf="@id/bg_one" />


        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="0次"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/bg_one"
            app:layout_constraintEnd_toEndOf="@id/today"
            app:layout_constraintStart_toStartOf="@id/today" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="0次"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/bg_one"
            app:layout_constraintEnd_toEndOf="@id/week"
            app:layout_constraintStart_toStartOf="@id/week" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="0次"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/bg_one"
            app:layout_constraintEnd_toEndOf="@id/month"
            app:layout_constraintStart_toStartOf="@id/month" />

        <TextView
            android:id="@+id/create_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="19dp"
            android:paddingBottom="18dp"
            android:text="创作等级："
            android:textColor="#ff979797"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/bg_one"
            app:layout_constraintTop_toBottomOf="@id/bg_one" />

        <TextView
            android:id="@+id/tv_create_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#2BA4D9"
            app:layout_constraintStart_toEndOf="@id/create_level"
            app:layout_constraintTop_toTopOf="@id/create_level" />

        <TextView
            android:id="@+id/tv_test_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"
            android:text="0"
            android:textColor="#2BA4D9"
            app:layout_constraintEnd_toEndOf="@id/bg_one"
            app:layout_constraintTop_toTopOf="@id/create_level" />

        <TextView
            android:id="@+id/test_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="19dp"
            android:text="预测等级："
            android:textColor="#ff979797"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/tv_test_level"
            app:layout_constraintTop_toBottomOf="@id/bg_one" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/qmui_config_color_white"
            android:paddingTop="10dp"
            android:paddingBottom="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_two" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

