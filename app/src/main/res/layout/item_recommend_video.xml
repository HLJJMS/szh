<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingTop="20dp"
    android:paddingEnd="16dp"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="韩江雪"
        android:textColor="#ff137ed0"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/iv_head"
        app:layout_constraintTop_toTopOf="@id/iv_head" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05-14 16:22"
        android:textColor="#ff989898"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_head"
        app:layout_constraintStart_toStartOf="@id/tv_name" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/tv_repaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="13dp"
        android:paddingTop="7dp"
        android:paddingEnd="13dp"
        android:paddingBottom="7dp"
        android:text="回复"
        android:textColor="#FF5B5B5B"
        app:layout_constraintEnd_toStartOf="@id/iv_zan"
        app:qmui_backgroundColor="#FFFAFAFA"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="13dp" />

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赞"
        android:textColor="#ff010101"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_repaly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_repaly" />

    <ImageView
        android:id="@+id/iv_zan"
        android:layout_width="13dp"
        android:layout_height="14dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_good"
        app:layout_constraintBottom_toBottomOf="@id/tv_repaly"
        app:layout_constraintEnd_toStartOf="@id/tv_zan"
        app:layout_constraintTop_toTopOf="@id/tv_repaly" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="啥？"
        android:textColor="#ff020202"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/iv_head" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/tv_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.5dp"
        android:gravity="center"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:text="5月21日新闻泡茶Fan"
        android:textColor="#ff020202"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:qmui_backgroundColor="#FFFAFAFA"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="5dp" />

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="5.5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_article"
        app:layout_constraintStart_toStartOf="@id/tv_article"
        app:layout_constraintTop_toTopOf="@id/tv_article" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/rb_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="35dp"
        android:paddingTop="8.5dp"
        android:paddingEnd="22dp"
        android:paddingBottom="9dp"
        android:textColor="#ff5b5b5b"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_article"
        app:qmui_backgroundColor="#FFFAFAFA"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="3dp" />

    <ImageView
        android:id="@+id/iv_zu"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/ic_zu"
        app:layout_constraintBottom_toBottomOf="@id/rb_detail"
        app:layout_constraintStart_toStartOf="@id/rb_detail"
        app:layout_constraintTop_toTopOf="@id/rb_detail" />

    <ImageView
        android:id="@+id/iv_go"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp"
        android:src="@mipmap/ic_fabu"
        app:layout_constraintBottom_toBottomOf="@id/rb_detail"
        app:layout_constraintEnd_toStartOf="@+id/tv_tui"
        app:layout_constraintTop_toTopOf="@id/rb_detail" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="21dp"
        android:layout_height="12dp"
        android:layout_marginEnd="24.5dp"
        android:background="#FFF2F2F2"
        android:paddingStart="7dp"
        android:paddingTop="3dp"
        android:paddingEnd="7dp"
        android:paddingBottom="3dp"
        android:src="@mipmap/ic_close_x"
        app:layout_constraintBottom_toBottomOf="@id/rb_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rb_detail" />

    <TextView
        android:id="@+id/tv_tui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="推"
        android:textColor="#ff5b5b5b"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/rb_detail"
        app:layout_constraintEnd_toStartOf="@+id/iv_close"
        app:layout_constraintTop_toTopOf="@id/rb_detail" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/rb_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>
