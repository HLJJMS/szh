<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="@drawable/conner5_solid_white_stoken_gray"
    tools:ignore="MissingConstraints">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/zhanwie"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_backgroundColor="@color/color_137ED0"
        app:qmui_radiusTopLeft="8dp"
        app:qmui_radiusTopRight="8dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="预测将会 "
        android:textColor="#ffffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/tv_title_type"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_title_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="涨"
        android:textColor="#FFFC6258"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="26dp"
        android:background="@color/qmui_config_color_white"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="选择预测银币"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <TextView
        android:id="@+id/tv_20"
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_conner3_white"
        android:gravity="center"
        android:text="20"
        android:textColor="@color/color_137ED0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/title2" />

    <TextView
        android:id="@+id/tv_50"
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:background="@drawable/bg_conner3_solid_blue"
        android:gravity="center"
        android:text="50"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintEnd_toStartOf="@id/tv_100"
        app:layout_constraintStart_toEndOf="@id/tv_20"
        app:layout_constraintTop_toTopOf="@id/tv_20" />

    <TextView
        android:id="@+id/tv_100"
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:background="@drawable/bg_conner3_solid_blue"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintEnd_toStartOf="@id/tv_200"
        app:layout_constraintStart_toEndOf="@id/tv_50"
        app:layout_constraintTop_toTopOf="@id/tv_20" />


    <TextView
        android:id="@+id/tv_200"
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:background="@drawable/bg_conner3_solid_blue"
        android:gravity="center"
        android:text="200"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintEnd_toEndOf="@id/line"
        app:layout_constraintStart_toEndOf="@id/tv_100"
        app:layout_constraintTop_toTopOf="@id/tv_20" />

    <View
        android:id="@+id/zhanwie"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_20" />

    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/conner5_solid_gray"
        android:gravity="top"
        android:padding="9dp"
        android:text="发表你的评论，最多50字"
        android:textColor="#ff989898"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/zhanwie" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_check_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_text" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="隐藏预测记录"
        android:textColor="@color/color_5b5b5b"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_check"
        app:layout_constraintStart_toEndOf="@id/iv_check"
        app:layout_constraintTop_toTopOf="@id/iv_check" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="确定预测"
        android:textColor="@color/color_137ED0"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_check" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/tv_ok"
        app:layout_constraintStart_toStartOf="@id/tv_ok"
        app:layout_constraintTop_toBottomOf="@id/tv_ok" />
</androidx.constraintlayout.widget.ConstraintLayout>
