<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/conner5_solid_white_stoken_gray"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/ic_pingbi_pop"
        app:layout_constraintEnd_toStartOf="@id/tv_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="屏蔽"
        android:textColor="#ff444444"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_title"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/rb_bead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:paddingStart="35dp"
        android:paddingTop="7dp"
        android:paddingEnd="35dp"
        android:paddingBottom="7dp"
        android:text="内容质量差"
        android:textColor="@color/color_2BA4D9"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:qmui_borderColor="@color/color_2BA4D9"
        app:qmui_radius="2dp" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/rb_looked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="35dp"
        android:paddingTop="7dp"
        android:paddingEnd="35dp"
        android:paddingBottom="7dp"
        android:text="看过的内容"
        android:textColor="@color/color_444444"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:qmui_borderColor="@color/color_DFDFDF"
        app:qmui_radius="2dp" />


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/rb_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="屏蔽来源"
        android:textColor="@color/color_444444"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/rb_bead"
        app:layout_constraintStart_toStartOf="@id/rb_bead"
        app:layout_constraintTop_toBottomOf="@id/rb_bead"
        app:qmui_borderColor="@color/color_DFDFDF"
        app:qmui_radius="2dp" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/rb_off"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="取消"
        android:textSize="12sp"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintEnd_toEndOf="@id/rb_bead"
        app:layout_constraintStart_toStartOf="@id/rb_bead"
        app:layout_constraintTop_toBottomOf="@id/rb_source"
        app:qmui_backgroundColor="@color/color_A4A4A4"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="2dp" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/rb_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="确认"
        android:textSize="12sp"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintEnd_toEndOf="@id/rb_looked"
        app:layout_constraintStart_toStartOf="@id/rb_looked"
        app:layout_constraintTop_toBottomOf="@id/rb_source"
        app:qmui_backgroundColor="@color/color_2CA4D9"
        app:qmui_borderWidth="0dp"
        app:qmui_radius="2dp" />

    <ImageView

        app:layout_constraintTop_toBottomOf="@id/rb_off"
        app:layout_constraintStart_toStartOf="@id/rb_off"
        android:layout_marginTop="12dp"
        android:id="@+id/iv_jinggao"
        android:src="@mipmap/ic_jubao_pop"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <TextView
        android:paddingBottom="12dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="@id/iv_jinggao"
        app:layout_constraintBottom_toBottomOf="@id/iv_jinggao"
        app:layout_constraintStart_toEndOf="@id/iv_jinggao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="举报/反馈"
        android:textColor="#ffff4d4d"
        android:textSize="10sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
