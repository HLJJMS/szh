<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#afffffff"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_release_photo"
        app:layout_constraintBottom_toTopOf="@id/tv_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_txt"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_txt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_release_txt"
        app:layout_constraintBottom_toTopOf="@id/tv_txt"
        app:layout_constraintEnd_toStartOf="@id/iv_photo"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="帖子"
        android:textColor="#ff444444"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/iv_close"
        app:layout_constraintEnd_toEndOf="@id/iv_txt"
        app:layout_constraintStart_toStartOf="@id/iv_txt" />

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="图片"
        android:textColor="#ff444444"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/iv_close"
        app:layout_constraintEnd_toEndOf="@id/iv_photo"
        app:layout_constraintStart_toStartOf="@id/iv_photo" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="70dp"
        android:src="@mipmap/ic_close_x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
